<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

	<settings>
		<!-- 전통적인 데이터베이스 컬럼명 형태인 A_COLUMN을
		     CamelCase 형태의 자바 프로퍼밍 인 aColumn으로
		     자동으로 매팽하도록 함 (기본값: false) -->
		<setting name="mapUnderscoreToCamelCase" value="true" />
		<!-- JDBC타입을 파라미터에게 제공하지 않을 때
		     null 값을 처리한 JDBC타입을 명시한다.
		     일부 드라이버는 컬럼의 JDBC타입을 정의하도록 요구하지만
		     대부분은 NULL, VARCHAR 나 OTHER 처럼 일반적인 값을 사용할 수 있다. -->
		<setting name="jdbcTypeForNull" value="NULL" />
	</settings>
	
</configuration>